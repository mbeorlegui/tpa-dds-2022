                                <div class="col-2 offset-md-8">
                                    <button type="button" class="boton-aceptar">Aceptar</button>
                                </div>
                                <div class="col-2">
                                    <button type="button" class="boton-rechazar">Rechazar</button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        {{/each}}
        <div class="row row-cols-1 row-cols-md-1 mb-1">
