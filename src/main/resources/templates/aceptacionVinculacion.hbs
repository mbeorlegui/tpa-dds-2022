        {{#each solicitudes}}
            <div class="row row-cols-1 row-cols-md-1 mb-1">
                <div class="col">
                    <div class="card mb-4 rounded-3 shadow-sm">
                        <div class="card-header py-3">
                            <h4 class="my-0 fw-normal">Solicitud NRO {{ id }}</h4>
                        </div>
                        <div class="card-body" style="padding: 0px 1rem 1rem 1rem;">
