                </form>
            {{else}}
                <form class="form-inline my-2 my-lg-0 ml-auto" action="/login" method="GET">
                    <button class="btn btn-outline-success my-2 my-sm-0 ml-auto" type="submit">LogIn</button>
                </form>
            {{/if}}
        </div>
    </div>
</nav>

