{{#partial "contenido"}}
    <form class="login-form" method="post">
        <h2>Registrar medición</h2>
        <div class="container d-flex justify-content-center border border-1 p-2">
            <a class="btn btn-primary mx-2" href="/user/admin/registrarMedicionParticular" role="button">Particular</a>
            <a class="btn btn-secondary mx-2" href="/user/admin/registrarMedicionCsv" role="button">CSV</a>
        </div>
        <div class="m-3 col-11 justify-content-center">
            <select class="form-select h-50" name="tipoDeConsumo" required>
                <option selected hidden value="">Seleccione tipo de consumo</option>
                {{#each tipos_consumo}}
                    <option class="text-uppercase" value="{{ id }}">{{ nombre }}</option>
                {{/each}}
            </select>
            <div class="d-flex p-1 my-2 align-items-center">
                <label for="valor" class="form-label align-items-center">Valor</label>
                <input class="ms-auto w-50 form-control ms-auto p-1" type="text" name="valor" id="valor" required>
            </div>
            <div class="d-flex p-1 my-2 align-items-center">
                <label for="periodicidad" class="form-label m-0">Periodicidad</label>
                <i class="fa fa-info-circle ms-2" title="Seleccione mensual o anual"></i>
                <select class="ms-auto w-50 p-1 form-select" name="periodicidad" id="periodicidad" onchange="habilitarPeriodo(this)" required>
                    <option value="" selected hidden disabled></option>
                    <option value="Mensual">Mensual</option>
                    <option value="Anual">Anual</option>
                </select>
            </div>
            <div class="d-flex p-1 my-2 align-items-center">
                <label for="periodoImputacion" class="form-label m-0">Periodo de imputación</label>
                <i class="fa fa-info-circle ms-2" title="" onmouseover="obtenerFormato(this)"></i>
                <input class="ms-auto form-control w-50" type="text" name="periodoImputacion" id="periodoImputacion" required disabled>
            </div>
        </div>
            <div class="action">
                <button type="submit" class="btn btn-secondary">Registrar</button>
            </div>
    </form>
{{/partial}}

{{>layout.hbs}}