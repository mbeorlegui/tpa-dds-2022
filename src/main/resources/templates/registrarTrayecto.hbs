{{#partial "contenido"}}
    <div class="login-form w-100">
        <form>
            <h1 class="ms-2">Registrar trayecto</h1>
            <div class="container-fluid" id="contenido">
                <div class="col-8 d-flex my-2">
                    <label for="exampleDataList" class="form-label my-auto ms-5">Inicio del trayecto</label>
                    <input class="form-control w-50 ms-auto" list="datalistOptions" id="exampleDataList"
                           placeholder="Type to search...">
                    <datalist id="datalistOptions">
                        {{#each paradas}}
                        <option value="{{ubicacion.calle}} {{ubicacion.altura}}">
                        {{/each}}
                    </datalist>
                </div>
                <div class="container d-flex align-items-center">
                    <div class="col-8 d-flex justify-content-center my-2">
                        <hr class="line">
                        <button type="button" class="btn btn-outline-secondary btn-circle"
                                onclick="agregarParada(this)">+
                        </button>
                        <hr class="line">
                    </div>
                    
                    <select class="form-select h-50" onchange="modificarUbicaciones({{paradasPorTransporte}})">
                        <option selected hidden>Seleccione transporte del tramo</option>
                        {{#each transportes}}
                        <option class="text-lowercase" value="{{id}}">
                            {{#if tipoDeTransportePublico}}
                                {{tipoDeTransportePublico}} {{linea}}
                            {{else}}
                                {{#if tipoDeServicioContratado}}
                                    {{tipoDeServicioContratado}}
                                {{else}} 
                                    {{#if tipoDeVehiculo}}
                                        {{tipoDeVehiculo}}
                                    {{else}}
                                        {{tipoTransporte}}
                                    {{/if}}
                                {{/if}}
                            {{/if}}</option>
                        {{/each}}
                    </select>
                </div>
                <div class="col-8 d-flex my-2">
                    <label for="exampleDataList" class="form-label my-auto ms-5">Fin del trayecto</label>
                    <input class="form-control w-50 ms-auto" list="datalistOptions" id="exampleDataList"
                           placeholder="Type to search...">
                    <datalist id="datalistOptions1">
                        <option value="San Francisco">
                        <option value="New York">
                        <option value="Seattle">
                        <option value="Los Angeles">
                        <option value="Chicago">
                    </datalist>
                </div>
            </div>
            <div class="mt-4 action">
                <button type="submit" class="btn btn-secondary">Cargar trayecto</button>
            </div>
        </form>
    </div>
{{/partial}}

{{>layout.hbs}}